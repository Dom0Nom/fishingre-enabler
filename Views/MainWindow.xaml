<Window x:Class="AetherLinkMonitor.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Fishing Re-Enabler" Height="800" Width="1200"
        Background="{StaticResource BackgroundBrush}"
        WindowStyle="None"
        ResizeMode="CanResize"
        AllowsTransparency="False"
        BorderThickness="0">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0"
                      ResizeBorderThickness="5"
                      GlassFrameThickness="0"
                      CornerRadius="0"
                      UseAeroCaptionButtons="False" />
    </WindowChrome.WindowChrome>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Custom Title Bar -->
        <Border Grid.Row="0" Background="#000000" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="12,0">
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="_" Width="45" Height="32"
                            Click="MinimizeButton_Click"
                            Background="Transparent"
                            Foreground="{StaticResource TextBrush}"
                            BorderThickness="0"
                            FontSize="16"
                            VerticalAlignment="Center"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            Padding="0,-8,0,0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#333333"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Content="□" Width="45" Height="32"
                            Click="MaximizeButton_Click"
                            Background="Transparent"
                            Foreground="{StaticResource TextBrush}"
                            BorderThickness="0"
                            FontSize="14"
                            VerticalAlignment="Center"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            Padding="0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#333333"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Content="✕" Width="45" Height="32"
                            Click="CloseButton_Click"
                            Background="Transparent"
                            Foreground="{StaticResource TextBrush}"
                            BorderThickness="0"
                            FontSize="14"
                            VerticalAlignment="Center"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            Padding="0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#555555"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0" Text="Fishing Re-Enabler"
                       FontSize="24" FontWeight="Bold"
                       Foreground="{StaticResource TextBrush}"
                       Margin="0,0,0,16"/>

        <!-- Settings Panel -->
        <Border Grid.Row="1" Background="#1A1A1A"
                Padding="16" Margin="0,0,0,16" CornerRadius="4">
            <StackPanel>
                <TextBlock Text="Settings" FontSize="18" FontWeight="Bold"
                           Foreground="{StaticResource TextBrush}" Margin="0,0,0,12"/>

                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="PrismLauncher Path:"
                               VerticalAlignment="Center" Margin="0,0,8,0"
                               Foreground="{StaticResource TextBrush}"/>
                    <TextBox Grid.Column="1" Text="{Binding PrismLauncherPath}"
                             Margin="0,0,16,0" Padding="4"
                             Background="#2A2A2A" Foreground="{StaticResource TextBrush}"
                             BorderBrush="#555555" BorderThickness="1"/>

                    <TextBlock Grid.Column="2" Text="Key:"
                               VerticalAlignment="Center" Margin="0,0,8,0"
                               Foreground="{StaticResource TextBrush}"/>
                    <TextBox Grid.Column="3" Text="{Binding KeyToSend}"
                             Margin="0,0,16,0" Padding="4"
                             Background="#2A2A2A" Foreground="{StaticResource TextBrush}"
                             BorderBrush="#555555" BorderThickness="1"/>

                    <TextBlock Grid.Column="4" Text="IPC Port:"
                               VerticalAlignment="Center" Margin="0,0,8,0"
                               Foreground="{StaticResource TextBrush}"/>
                    <TextBox Grid.Column="5" Text="{Binding IpcPort}" Padding="4"
                             Background="#2A2A2A" Foreground="{StaticResource TextBrush}"
                             BorderBrush="#555555" BorderThickness="1"/>
                </Grid>

                <StackPanel Orientation="Horizontal">
                    <Button Content="Save Settings" Command="{Binding SaveSettingsCommand}"
                            Padding="12,6" Margin="0,0,8,0"
                            Background="{StaticResource PrimaryBrush}"
                            Foreground="{StaticResource TextBrush}" BorderThickness="0"/>
                    <Button Content="Rescan Instances" Command="{Binding RescanCommand}"
                            Padding="12,6"
                            Background="{StaticResource PrimaryBrush}"
                            Foreground="{StaticResource TextBrush}" BorderThickness="0"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Instances DataGrid -->
        <Border Grid.Row="2" Background="#1A1A1A" Margin="0,0,0,16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Instances" FontSize="18" FontWeight="Bold"
                           Foreground="{StaticResource TextBrush}" Margin="16,16,16,8"/>

                <DataGrid Grid.Row="1" ItemsSource="{Binding Instances}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          SelectionMode="Single"
                          HeadersVisibility="Column"
                          GridLinesVisibility="None"
                          Background="Transparent"
                          Foreground="{StaticResource TextBrush}"
                          RowBackground="#2A2A2A"
                          AlternatingRowBackground="#1F1F1F"
                          BorderThickness="0">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#000000"/>
                            <Setter Property="Foreground" Value="{StaticResource HeaderBrush}"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="8,4"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.Columns>
                        <DataGridCheckBoxColumn Header="Enabled" Binding="{Binding IsEnabled}" Width="80"/>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Process" Binding="{Binding ProcessStatus}" Width="100" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Window" Binding="{Binding WindowStatus}" Width="100" IsReadOnly="True"/>
                        <DataGridTextColumn Header="IPC" Binding="{Binding IpcStatus}" Width="120" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Events" Binding="{Binding EventCount}" Width="70" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding CurrentStatus}" Width="120" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Last Event" Binding="{Binding LastEventTimeDisplay}" Width="100" IsReadOnly="True"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- Log Panel Header -->
        <TextBlock Grid.Row="3" Text="Event Log" FontSize="18" FontWeight="Bold"
                   Foreground="{StaticResource TextBrush}" Margin="0,0,0,8"/>

        <!-- Log Panel -->
        <Border Grid.Row="4" Background="Transparent">
            <DataGrid ItemsSource="{Binding LogEntries}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      HeadersVisibility="Column"
                      GridLinesVisibility="None"
                      Background="Transparent"
                      Foreground="{StaticResource TextBrush}"
                      RowBackground="#2A2A2A"
                      AlternatingRowBackground="#1F1F1F"
                      BorderThickness="0">
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#004488"/>
                        <Setter Property="Foreground" Value="{StaticResource HeaderBrush}"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Padding" Value="8,4"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Time" Binding="{Binding Timestamp, StringFormat='HH:mm:ss'}" Width="80"/>
                    <DataGridTextColumn Header="Level" Binding="{Binding Level}" Width="80"/>
                    <DataGridTextColumn Header="Instance" Binding="{Binding InstanceName}" Width="150"/>
                    <DataGridTextColumn Header="Message" Binding="{Binding Message}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
        </Grid>
    </Grid>
</Window>
