<Application x:Class="AetherLinkMonitor.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <!-- AetherLink Color Scheme - Cyan to Purple Gradient -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#3BA0E8"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#7B5FE8"/>

        <!-- Blue-Purple to Black Gradient Background (matching logo) -->
        <LinearGradientBrush x:Key="BackgroundBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#1A2A44" Offset="0"/>
            <GradientStop Color="#0F1A2E" Offset="0.3"/>
            <GradientStop Color="#0A0F1A" Offset="0.6"/>
            <GradientStop Color="#0D0D0D" Offset="1"/>
        </LinearGradientBrush>

        <!-- Transparent dark blue surface to show gradient through -->
        <LinearGradientBrush x:Key="SurfaceBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#22000033" Offset="0"/>
            <GradientStop Color="#44000066" Offset="1"/>
        </LinearGradientBrush>

        <!-- Light cyan-blue text for readability -->
        <SolidColorBrush x:Key="TextBrush" Color="#A0D5F0"/>

        <!-- Bright cyan for headers (matching logo) -->
        <SolidColorBrush x:Key="HeaderBrush" Color="#5CB3E8"/>
    </Application.Resources>
</Application>
