<Application x:Class="AetherLinkMonitor.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <!-- Black and White Color Scheme -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#555555"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#777777"/>

        <!-- Black to Dark Gray Gradient Background -->
        <LinearGradientBrush x:Key="BackgroundBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#000000" Offset="0"/>
            <GradientStop Color="#0D0D0D" Offset="0.5"/>
            <GradientStop Color="#1A1A1A" Offset="1"/>
        </LinearGradientBrush>

        <!-- Dark gray surface -->
        <LinearGradientBrush x:Key="SurfaceBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#1A1A1A" Offset="0"/>
            <GradientStop Color="#2A2A2A" Offset="1"/>
        </LinearGradientBrush>

        <!-- Light gray text for readability -->
        <SolidColorBrush x:Key="TextBrush" Color="#CCCCCC"/>

        <!-- White for headers -->
        <SolidColorBrush x:Key="HeaderBrush" Color="#FFFFFF"/>
    </Application.Resources>
</Application>
