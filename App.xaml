<Application x:Class="AetherLinkMonitor.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="PrimaryBrush" Color="#CC0000"/>

        <!-- Red to Black Gradient Background -->
        <LinearGradientBrush x:Key="BackgroundBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#660000" Offset="0"/>
            <GradientStop Color="#330000" Offset="0.3"/>
            <GradientStop Color="#1a0000" Offset="0.6"/>
            <GradientStop Color="#000000" Offset="1"/>
        </LinearGradientBrush>

        <!-- Transparent dark surface to show gradient through -->
        <LinearGradientBrush x:Key="SurfaceBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#33000000" Offset="0"/>
            <GradientStop Color="#66000000" Offset="1"/>
        </LinearGradientBrush>

        <!-- Light red text for readability -->
        <SolidColorBrush x:Key="TextBrush" Color="#FF9999"/>

        <!-- Darker red for headers -->
        <SolidColorBrush x:Key="HeaderBrush" Color="#FF6666"/>
    </Application.Resources>
</Application>
